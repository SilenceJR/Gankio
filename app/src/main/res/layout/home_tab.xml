<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_10"
    android:paddingStart="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10"
    >

    <com.silence.gankio.widget.TabView
        android:id="@+id/tab_android"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_60"
        android:layout_weight="1"
        app:tab_text="Android"
        app:tab_icon="@mipmap/ic_launcher"
        app:tab_select_icon="@mipmap/ic_launcher_round"
        app:tab_icon_height="@dimen/dp_22"
        app:tab_icon_width="@dimen/dp_22"
        app:tab_icon_text_interval="@dimen/dp_2"
        app:tab_text_size="@dimen/sp_14"
        app:tab_text_color="@android:color/black"
        app:tab_text_select_color="@color/red"
        />

    <com.silence.gankio.widget.TabView
        android:id="@+id/tab_ios"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_60"
        android:layout_weight="1"
        app:tab_text="iOS"
        app:tab_icon="@mipmap/ic_launcher"
        app:tab_select_icon="@mipmap/ic_launcher_round"
        app:tab_icon_height="@dimen/dp_22"
        app:tab_icon_width="@dimen/dp_22"
        app:tab_icon_text_interval="@dimen/dp_2"
        app:tab_text_size="@dimen/sp_14"
        app:tab_text_color="@android:color/black"
        app:tab_text_select_color="@color/red"
        />

    <com.silence.gankio.widget.TabView
        android:id="@+id/tab_welfare"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_60"
        android:layout_weight="1"
        app:tab_text="福利"
        app:tab_icon="@mipmap/ic_launcher"
        app:tab_select_icon="@mipmap/ic_launcher_round"
        app:tab_icon_height="@dimen/dp_22"
        app:tab_icon_width="@dimen/dp_22"
        app:tab_icon_text_interval="@dimen/dp_2"
        app:tab_text_size="@dimen/sp_14"
        app:tab_text_color="@android:color/black"
        app:tab_text_select_color="@color/red"
        />

    <com.silence.gankio.widget.TabView
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_60"
        android:layout_weight="1"
        app:tab_text="Android"
        app:tab_icon="@mipmap/ic_launcher"
        app:tab_select_icon="@mipmap/ic_launcher_round"
        app:tab_icon_height="@dimen/dp_22"
        app:tab_icon_width="@dimen/dp_22"
        app:tab_icon_text_interval="@dimen/dp_2"
        app:tab_text_size="@dimen/sp_14"
        app:tab_text_color="@android:color/black"
        app:tab_text_select_color="@color/red"
        />



</LinearLayout>